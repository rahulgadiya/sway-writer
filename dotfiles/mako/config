# Mako notification daemon configuration

# Font configuration - matching your terminal setup
font=Iosevka 12

# Colors - clean black/white theme to match your aesthetic
background-color=#000000
text-color=#ffffff
border-color=#333333

# Dimensions and spacing
width=350
height=150
padding=16
margin=12

# Visual styling
border-size=1
border-radius=8
progress-color=over #ffffff40

# Icons
icon-path=/usr/share/icons/Papirus-Dark
max-icon-size=48

# Behavior
layer=overlay
default-timeout=5000
max-visible=5

# High urgency notifications
[urgency=high]
background-color=#ff0000
text-color=#ffffff
border-color=#ff4040
ignore-timeout=1
default-timeout=0

# Low urgency notifications  
[urgency=low]
default-timeout=3000
